<Page x:Class="Learn.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Learn.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage" >

    <Grid>
        <StackPanel Orientation="Horizontal" Margin="130,100,103,0" Height="125" VerticalAlignment="Top">
            <Button x:Name="BtnServise" Margin="15, 0 0 0"  FontFamily="Comic Sans MS" FontSize="24" Content="Список услуг"  Background="#FF04A0FF" HorizontalAlignment="Left" Width="255" Height="78"  Click="BtnServise_Click"/>
            <Button x:Name="BtnBlizhaZapis" Margin="15, 0 0 0" FontFamily="Comic Sans MS" FontSize="24" Content="Ближайшие записи"  Background="#FF04A0FF" Height="78" VerticalAlignment="Center" HorizontalAlignment="Right" Width="255"/>
        </StackPanel>
    </Grid>
</Page>
